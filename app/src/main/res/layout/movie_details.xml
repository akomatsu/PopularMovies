<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Big title -->
        <TextView
            android:id="@+id/tv_title"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/titleTextColor"
            android:background="@color/titleBackground"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/title_side_padding"
            android:paddingLeft="@dimen/title_side_padding"
            android:paddingEnd="@dimen/title_side_padding"
            android:paddingRight="@dimen/title_side_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_area_height" />

        <!-- Poster thumbnail -->
        <ImageView
            android:id="@+id/iv_poster"
            android:contentDescription="@string/poster_description"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/poster_top_margin"
            android:layout_marginLeft="@dimen/poster_left_margin"
            android:layout_marginStart="@dimen/poster_left_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Original title -->
        <TextView
            android:id="@+id/tv_original_title_heading"
            android:text="@string/heading_original_title"
            android:textSize="@dimen/heading_text_size"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_toEndOf="@id/iv_poster"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/heading_left_margin"
            android:layout_marginStart="@dimen/heading_left_margin"
            android:layout_marginTop="@dimen/heading_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_original_title"
            android:textSize="@dimen/content_text_size"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_toEndOf="@id/iv_poster"
            android:layout_below="@id/tv_original_title_heading"
            android:layout_marginLeft="@dimen/content_left_margin"
            android:layout_marginStart="@dimen/content_left_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Release date -->
        <TextView
            android:id="@+id/tv_release_date_heading"
            android:text="@string/heading_release_date"
            android:textSize="@dimen/heading_text_size"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_toEndOf="@id/iv_poster"
            android:layout_below="@id/tv_original_title"
            android:layout_marginLeft="@dimen/heading_left_margin"
            android:layout_marginStart="@dimen/heading_left_margin"
            android:layout_marginTop="@dimen/heading_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_release_date"
            android:textSize="@dimen/content_text_size"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_toEndOf="@id/iv_poster"
            android:layout_below="@id/tv_release_date_heading"
            android:layout_marginLeft="@dimen/content_left_margin"
            android:layout_marginStart="@dimen/content_left_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- User rating -->
        <TextView
            android:id="@+id/tv_user_rating_heading"
            android:text="@string/heading_user_rating"
            android:textSize="@dimen/heading_text_size"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_toEndOf="@id/iv_poster"
            android:layout_below="@id/tv_release_date"
            android:layout_marginLeft="@dimen/heading_left_margin"
            android:layout_marginStart="@dimen/heading_left_margin"
            android:layout_marginTop="@dimen/heading_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_user_rating"
            android:textSize="@dimen/content_text_size"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_toEndOf="@id/iv_poster"
            android:layout_below="@id/tv_user_rating_heading"
            android:layout_marginLeft="@dimen/content_left_margin"
            android:layout_marginStart="@dimen/content_left_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Synopsis -->
        <TextView
            android:id="@+id/tv_synopsis"
            android:textSize="@dimen/synopsis_text_size"
            android:layout_below="@id/iv_poster"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:background="#009688"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="130dp" />

        <ImageView
            android:id="@+id/iv_poster"
            android:contentDescription="Movie Poster"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_original_title_heading"
            android:text="Original Title:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_original_title"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_below="@id/tv_original_title_heading"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_release_date_heading"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_below="@id/tv_original_title"
            android:text="Release Date:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_release_date"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_below="@id/tv_release_date_heading"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_user_rating_heading"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_below="@id/tv_release_date"
            android:text="User Rating:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_user_rating"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_below="@id/tv_user_rating_heading"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_synopsis"
            android:layout_below="@id/iv_poster"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>